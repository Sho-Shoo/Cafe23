<div class="row">
  <div class="col s9">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Calculate Store Payroll</span>
        <%= form_with url: store_payroll_path, method: :get do |form| %>
          <%#= f.error_notification %>
          <div class="row">
            <div class="form-inputs">
              <% if current_user.admin_role? %>
                <div>
                  <%= form.label :store_id %>
                  <%= form.collection_select :store_id, Store.alphabetical.active, :id, :name, prompt: true %>
                </div>
              <% else %>
                <div>
                  <%= form.label :store_id %>
                  <%= form.collection_select :store_id, [current_user.current_assignment.store], :id, :name, prompt: false %>
                </div>
              <% end %>
              <div>
                <%= form.label :start_date %>
                <%= form.date_field :start_date %>
              </div>
              <div>
                <%= form.label :end_date %>
                <%= form.date_field :end_date %>
              </div>
            </div>
          </div>
          </div>
          </div>
          <div class="row">
            <div class="form-actions col s9">
              <%= form.submit "Calculate" %>
            </div>
          </div>
        <% end %>
        </div>
</div>
<%= link_to 'Back', :back %>


